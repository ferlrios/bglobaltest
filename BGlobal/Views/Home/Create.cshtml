@model Vehicle 
@{
    int cont = 0;
    ViewData["Title"] = "Alta";
}

<h1>@ViewData["Title"]</h1>

<h4>Dar de alta un nuevo vehículo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Patente" class="control-label"></label>
                <input asp-for="Patente" class="form-control" />
                <span asp-validation-for="Patente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Marca" class="control-label"></label>
                <select asp-for="Marca" class="form-control">
                    <option value="Ford">Ford</option>
                    <option value="Fiat">Fiat</option>
                    <option value="Peugeot">Peugeot</option>
                    <option value="Renault">Renault</option>
                </select>
                <span asp-validation-for="Marca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Modelo" class="control-label"></label>
                <input asp-for="Modelo" class="form-control" />
                <span asp-validation-for="Modelo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Puertas" class="control-label"></label>
                <input asp-for="Puertas" type="number" value="0" class="form-control" />
                <span asp-validation-for="Puertas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dueño" class="control-label"></label>
                <select asp-for="Dueño" class="form-control">
                    @foreach (var item in ViewBag.Dueños)
                    {
                            <option>@item.first_name @item.last_name</option>
                    }
                </select>
                <span asp-validation-for="Dueño" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<hr />
<a asp-action="Index">Volver al listado</a>
